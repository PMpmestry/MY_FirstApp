<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.myfirstapp.Update_Page"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/U_TF_Name"
            android:layout_width="304dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="28dp"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/U_TF_Mobile"
            android:layout_width="304dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Phone No."
            android:digits="0123456789"
            android:imeOptions="actionDone"
            android:textSize="20sp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/U_TF_Name"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <EditText
            android:id="@+id/U_TF_Email"
            android:layout_width="304dp"
            android:layout_height="46dp"
            android:ems="10"
            android:hint="Email Id"
            android:inputType="textEmailAddress"
            android:textSize="20sp"
            android:imeOptions="actionDone"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/U_DOB_field" />

        <EditText
            android:id="@+id/U_DOB_field"
            android:layout_width="304dp"
            android:layout_height="46dp"
            android:hint="Date of Birth"
            android:paddingTop="12dp"
            android:textSize="20sp"
            android:inputType="none"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/U_TF_Mobile"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <EditText
            android:id="@+id/U_DOA_field"
            android:layout_width="304dp"
            android:layout_height="46dp"
            android:hint="Anniversary Date"
            android:paddingTop="12dp"
            android:textSize="20sp"
            android:inputType="none"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/U_TF_Email" />

        <EditText
            android:id="@+id/U_TF_TelNo"
            android:layout_width="304dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="10"
            android:hint="LandLine No."
            android:digits="0123456789"
            android:textSize="20sp"
            android:imeOptions="actionDone"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/U_DOA_field" />

        <Button
            android:id="@+id/U_But_update"
            android:layout_width="122dp"
            android:layout_height="51dp"
            android:layout_gravity="center"
            android:text="Update"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/U_TF_TelNo"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>