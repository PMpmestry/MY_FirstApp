            <EditText
                android:id="@+id/TF_U_Name"
                android:layout_width="294dp"
                android:layout_height="50dp"
                android:layout_marginTop="32dp"
                android:ems="10"
                android:layout_gravity="center"
                android:hint="Name"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/TF_U_Phone"
                android:layout_width="294dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="Phone No"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/TF_U_Email"
                android:layout_width="294dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="Email ID"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/U_DOB_field"
                android:layout_width="294dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="DOB"
                android:inputType="none" />

            <EditText
                android:id="@+id/U_DOA_field"
                android:layout_width="294dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="DOA"
                android:inputType="none" />

            <EditText
                android:id="@+id/TF_U_TelNo"
                android:layout_width="294dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="LandLine No."
                android:inputType="textPersonName" />

            <Button
